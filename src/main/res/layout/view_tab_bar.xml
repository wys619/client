<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bar"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llMainTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_trans_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_tab_padding_vertical"
                android:paddingTop="@dimen/dimen_tab_padding_vertical">

                <CheckBox
                    android:id="@+id/cbMainTab"
                    android:layout_width="@dimen/dimen_tab_icon_size"
                    android:layout_height="@dimen/dimen_tab_icon_size"
                    android:background="@drawable/selector_main_tab"
                    android:button="@null"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/cbMainTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:clickable="false"
                    android:text="@string/string_main_tab"
                    android:textColor="@drawable/selector_color_tab_text"
                    android:textSize="@dimen/dimen_tab_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCategoryTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_trans_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_tab_padding_vertical"
                android:paddingTop="@dimen/dimen_tab_padding_vertical">

                <CheckBox
                    android:id="@+id/cbCategoryTab"
                    android:layout_width="@dimen/dimen_tab_icon_size"
                    android:layout_height="@dimen/dimen_tab_icon_size"
                    android:background="@drawable/selector_category_tab"
                    android:button="@null"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/cbCategoryTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:clickable="false"
                    android:text="@string/string_category_tab"
                    android:textColor="@drawable/selector_color_tab_text"
                    android:textSize="@dimen/dimen_tab_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCartTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_trans_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_tab_padding_vertical"
                android:paddingTop="@dimen/dimen_tab_padding_vertical">

                <CheckBox
                    android:id="@+id/cbCartTab"
                    android:layout_width="@dimen/dimen_tab_icon_size"
                    android:layout_height="@dimen/dimen_tab_icon_size"
                    android:background="@drawable/selector_cart_tab"
                    android:button="@null"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/cbCartTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/string_cart_tab"
                    android:clickable="false"
                    android:textColor="@drawable/selector_color_tab_text"
                    android:textSize="@dimen/dimen_tab_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMsgTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_trans_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_tab_padding_vertical"
                android:paddingTop="@dimen/dimen_tab_padding_vertical">

                <CheckBox
                    android:id="@+id/cbMsgTab"
                    android:layout_width="@dimen/dimen_tab_icon_size"
                    android:layout_height="@dimen/dimen_tab_icon_size"
                    android:background="@drawable/selector_msg_tab"
                    android:button="@null"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/cbMsgTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/string_message_tab"
                    android:clickable="false"
                    android:textColor="@drawable/selector_color_tab_text"
                    android:textSize="@dimen/dimen_tab_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_trans_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_tab_padding_vertical"
                android:paddingTop="@dimen/dimen_tab_padding_vertical">

                <CheckBox
                    android:id="@+id/cbMyTab"
                    android:layout_width="@dimen/dimen_tab_icon_size"
                    android:layout_height="@dimen/dimen_tab_icon_size"
                    android:background="@drawable/selector_me_tab"
                    android:button="@null"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/cbMyTabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/string_my_tab"
                    android:clickable="false"
                    android:textColor="@drawable/selector_color_tab_text"
                    android:textSize="@dimen/dimen_tab_text_size" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>